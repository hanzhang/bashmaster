### Aliases

# common programs
alias bettertouchtool="open -a /Applications/BetterTouchTool.app/Contents/MacOS/BetterTouchTool"
alias outlook="open -a /Applications/Microsoft\ Office\ 2011/Microsoft\ Outlook.app/Contents/MacOS/Microsoft\ Outlook"
alias slack="open -a /Applications/Slack.app/Contents/MacOS/Slack"
alias chrome="open -a /Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome"
alias iterm="open -a /Applications/iTerm.app/Contents/MacOs/iTerm"
alias xcode="open -a /Applications/Xcode.app/Contents/MacOS/Xcode"

# Open specified files in Sublime Text
# "s ." will open the current directory in Sublime
alias s="subl -a ."

#start ipython notebook
alias ipy="ipython notebook"
alias p="python "

#show hide files
alias showFiles='defaults write com.apple.finder AppleShowAllFiles YES; killall Finder /System/Library/CoreServices/Finder.app'
alias hideFiles='defaults write com.apple.finder AppleShowAllFiles NO; killall Finder /System/Library/CoreServices/Finder.app'


# Color LS
colorflag="-G"
#alias ls="command ls ${colorflag}"
alias ls="gls --color=auto --group-directories-first" #brew install coreutils
alias l="ls -lF ${colorflag}" # all files, in long format
alias la="ls -laF ${colorflag}" # all files inc dotfiles, in long format
alias lsd='ls -lF ${colorflag} | grep "^d"' # only directories

# Color tree -- brew install tree
alias tree="tree -C --dirsfirst"

color_style="monokai"

# Quicker navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# Enable aliases to be sudoâ€™ed
alias sudo='sudo '

# Colored up cat!
# You must install Pygments first - "sudo easy_install Pygments"
alias cat='pygmentize -O style=${color_style} -f console256 -g'

# Git
# You must install Git first
alias gs='git status'
alias ga='git add .'
alias gc='git commit -m' # requires you to type a commit message
alias gp='git push'
alias grm='git rm $(git ls-files --deleted)'

alias root='cd $root'
alias stodo='subl -a ~/Documents/root/docs/notes/ToDo.md'
alias ctodo='chrome ~/Documents/root/docs/notes/ToDo.md'
alias bash_profile='subl -a ~/.bash_profile'
alias bp=bash_profile